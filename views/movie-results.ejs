<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Results</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/querySearch.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@400;900&family=Lora&family=Playfair+Display&display=swap">
    <link rel="stylesheet" href="css/movie-results.css"> 
</head>
<body>
    <%- include('navBar'); -%>    
    <div class="container">
        <table>
            <% queryResults.forEach(function(result) { %>
                <tr>
                    <td class="logo-cell">
                        <img class="movie-logo" src="https://image.tmdb.org/t/p/w500<%= result.logo %>" alt="<%= result.title %> Poster">
                    </td> 
                    <td>
                        <h2 class="movie-title"><%= result.title %></h2>
                        <p class="movie-overview"><%= result.overview %></p>
                    </td>
                    <td> 
                        <button class="m_id" id="<%= result.movie_id %>">View More</button>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>

    <script src="app.js"></script>
    <script src="script/queryResult.js"></script>
</body>
</html>
